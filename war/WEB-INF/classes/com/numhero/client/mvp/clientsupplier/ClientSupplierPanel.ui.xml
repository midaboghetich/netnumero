<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:nhw="urn:import:com.numhero.client.widget" xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
             ui:defaultLocale="en" ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
             ui:generateFilename="ClientSupplier" ui:generateLocales="default">

    <gwt:HTMLPanel styleName="formContainer">

        <gwt:DisclosurePanel ui:field="errorsPanel"
                             styleName="validation-advice" width="100%">
            <gwt:header>Errors</gwt:header>
        </gwt:DisclosurePanel>

        <gwt:HTMLPanel styleName="form-with-shadow">
            <table class="formContainer" cellpadding="0" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <td colspan="4">
                            <ui:msg key="client.supplier.organisational.details">Organisational Details</ui:msg>
                        </td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="form-item-label">
                            <gwt:Label>
                                <ui:msg key="client.supplier.organisation.name">Organisation name</ui:msg>
                            </gwt:Label>
                        </td>
                        <td class="formItem" colspan="3">
                            <gwt:TextBox ui:field="tbCompanyName" width="100%"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="form-item-label">
                            <gwt:Label>
                                <ui:msg key="client.supplier.business.phone">Business phone</ui:msg>
                            </gwt:Label>
                        </td>
                        <td class="formItem">
                            <gwt:TextBox ui:field="tbCompanyPhone" width="100%"/>
                        </td>
                        <td class="form-item-label">
                            <gwt:Label>
                                <ui:msg key="client.supplier.fax">Fax</ui:msg>
                            </gwt:Label>
                        </td>
                        <td class="formItem">
                            <gwt:TextBox ui:field="tbCompanyFax" width="100%"/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </gwt:HTMLPanel>

        <gwt:HTMLPanel styleName="form-with-shadow">
            <table class="formContainer" cellpadding="0" cellspacing="0"
                   width="100%">
                <thead>
                    <tr>
                        <td colspan="6">
                            <ui:msg key="client.supplier.address.title">Address</ui:msg>
                        </td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="form-item-label">
                            <gwt:Label>
                                <ui:msg key="client.supplier.address">Address</ui:msg>
                            </gwt:Label>
                        </td>
                        <td class="formItem" colspan="5">
                            <gwt:TextBox ui:field="tbAddress" width="100%"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="form-item-label">
                            <gwt:Label>
                                <ui:msg key="client.supplier.city">City</ui:msg>
                            </gwt:Label>
                        </td>
                        <td class="formItem">
                            <gwt:TextBox ui:field="tbCity" width="100%"/>
                        </td>
                        <td class="form-item-label">
                            <gwt:Label>
                                <ui:msg key="client.supplier.region">Region</ui:msg>
                            </gwt:Label>
                        </td>
                        <td class="formItem">
                            <gwt:TextBox ui:field="tbRegion" width="100%"/>
                        </td>
                        <td class="form-item-label">
                            <gwt:Label>
                                <ui:msg key="client.supplier.zip.code">Zip Code</ui:msg>
                            </gwt:Label>
                        </td>
                        <td class="formItem">
                            <gwt:TextBox ui:field="tbZipCode" width="100%"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="form-item-label">
                            <gwt:Label>
                                <ui:msg key="client.supplier.country">Country</ui:msg>
                            </gwt:Label>
                        </td>
                        <td class="formItem" colspan="5">
                            <gwt:TextBox ui:field="tbCountry" width="100%"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="form-item-label">
                            <gwt:Label>
                                <ui:msg key="client.supplier.internal.notes">Internal notes</ui:msg>
                            </gwt:Label>
                        </td>
                        <td class="formItem" colspan="5">
                            <gwt:TextArea ui:field="taNotes" width="100%"
                                          height="100"/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <table class="formContainer" cellpadding="0" cellspacing="0"
                   width="100%">
                <thead>
                    <tr>
                        <td colspan="4">
                            <ui:msg key="client.supplier.contact.information">Contact information</ui:msg>
                        </td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="form-item-label">
                            <gwt:Label>
                                <ui:msg key="client.supplier.name">Name</ui:msg>
                            </gwt:Label>
                        </td>
                        <td class="formItem" colspan="3">
                            <gwt:TextBox ui:field="name" width="100%"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="form-item-label">
                            <gwt:Label>
                                <ui:msg key="client.supplier.email">Email</ui:msg>
                            </gwt:Label>
                        </td>
                        <td class="formItem" colspan="3">
                            <gwt:TextBox ui:field="tbEmail" width="100%"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="form-item-label">
                            <gwt:Label>
                                <ui:msg key="client.supplier.phone">Phone</ui:msg>
                            </gwt:Label>
                        </td>
                        <td class="formItem">
                            <gwt:TextBox ui:field="tbPhone" width="100%"/>
                        </td>
                        <td class="form-item-label">
                            <gwt:Label>
                                <ui:msg key="client.supplier.mobile">Mobile</ui:msg>
                            </gwt:Label>
                        </td>
                        <td class="formItem">
                            <gwt:TextBox ui:field="tbMobile" width="100%"/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </gwt:HTMLPanel>

        <gwt:HTMLPanel>
            <gwt:HorizontalPanel styleName="buttonsPanel"
                                 width="100%">
                <nhw:NetNumeroButton styleName="inh-button"
                                     href="javascript:;" ui:field="btSave">
                    <ui:msg key="client.supplier.save">Save</ui:msg>
                </nhw:NetNumeroButton>
                <nhw:NetNumeroButton styleName="inh-button"
                                     href="javascript:;" ui:field="btCancel">
                    <ui:msg key="client.supplier.cancel">Cancel</ui:msg>
                </nhw:NetNumeroButton>
            </gwt:HorizontalPanel>
        </gwt:HTMLPanel>
    </gwt:HTMLPanel>
</ui:UiBinder>
