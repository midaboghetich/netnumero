<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:nhw="urn:import:com.numhero.client.widget" xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
             ui:defaultLocale="en" ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
             ui:generateFilename="Home" ui:generateLocales="default">


    <ui:style>
        .important {
        font-weight: bold;
        }
    </ui:style>
    <gwt:HTMLPanel>
        <div id="dashboardTopLayout">
            <div id="dashboardOverviewDesc">
                <nhw:TitleLevelOne>
                    <ui:msg key="home.financial.overview">Financial Overview</ui:msg>
                </nhw:TitleLevelOne>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla
                    nunc dui, mattis eget aliquet nec,
                    suscipit vel dolor. Donec gravida
                    pellentesque viverra. Nullam luctus
                    rutrum neque.
                </p>
            </div>
            <div id="dashboardOverviewTable">
                <table class="inh-standard-recap" border="0" cellspacing="0"
                       cellpadding="0">
                    <tr>
                        <th>&nbsp;
                        </th>
                        <th class="right">
                            <ui:msg key="home.month">Month</ui:msg>
                        </th>
                        <th class="right">
                            <ui:msg key="home.year">Year</ui:msg>
                        </th>
                    </tr>
                    <tr>
                        <td>
                            <ui:msg key="home.turnover">Turnover</ui:msg>
                        </td>
                        <td class="right">&pound;3,500.00
                        </td>
                        <td class="right">&pound;18,500.00
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <ui:msg key="home.cost">Cost</ui:msg>
                        </td>
                        <td class="right">&pound;3,500.00
                        </td>
                        <td class="right">&pound;18,500.00
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <ui:msg key="home.profit">Profit</ui:msg>
                        </td>
                        <td class="right">&pound;3,500.00
                        </td>
                        <td class="right">&pound;18,500.00
                        </td>
                    </tr>
                </table>
            </div>
            <div id="dashboardOverviewActions">
                <gwt:VerticalPanel>
                    <nhw:TitleLevelTwo>I would like to...</nhw:TitleLevelTwo>
                    <gwt:HorizontalPanel styleName="home-buttons-container">
                        <nhw:NetNumeroButton href="#invoice" ui:field="btNewInvoice">
                            <ui:msg key="home.create.an.invoice">Create an invoice</ui:msg>
                        </nhw:NetNumeroButton>
                        <nhw:NetNumeroButton href="#estimate"
                                             ui:field="btNewEstimate">
                            <ui:msg key="home.create.an.estimate">Create an estimate</ui:msg>
                        </nhw:NetNumeroButton>

                    </gwt:HorizontalPanel>
                    <gwt:HorizontalPanel styleName="home-buttons-container">
                        <nhw:NetNumeroButton href="#projects" ui:field="btTimeTrack">
                            <ui:msg key="home.track.time">Track time</ui:msg>
                        </nhw:NetNumeroButton>
                        <nhw:NetNumeroButton href="#report" ui:field="btNewReport">
                            <ui:msg key="home.generate.a.report">Generate a report</ui:msg>
                        </nhw:NetNumeroButton>

                    </gwt:HorizontalPanel>
                </gwt:VerticalPanel>

            </div>
        </div>
        <hr/>
    </gwt:HTMLPanel>
</ui:UiBinder> 